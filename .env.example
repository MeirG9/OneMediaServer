# .env.example

# User and group IDs
PUID=1000
PGID=1000

# Timezone
TZ=Asia/Jerusalem

# Paths
BASE_DIR="/opt/onemediaserver"
CONF="${BASE_DIR}/config"
DATA="${BASE_DIR}/data"

# Domain and ACME email for Traefik
DOMAIN=your.domain.tld
ACME_EMAIL=you@example.com

# Traefik dashboard credentials (hashed, using e.g. htpasswd -nb)
TRAEFIK_USER=admin
TRAEFIK_PASSWORD_HASH=$apr1$xyz$abcdefghijklmnopqrstu

# Optional override config source
CONFIG_SOURCE=""

# Secrets file (optional, keep out of VCS)
SECRETS_FILE="${BASE_DIR}/secrets/.env.secrets"

# Prometheus scrape interval
PROMETHEUS_SCRAPE_INTERVAL=15s

# Optional service-specific API keys (define in secrets file instead)
# TAUTULLI_API_KEY=xxxxxxxxxxxxxxxxxxxx
# OVERSEERR_API_KEY=xxxxxxxxxxxxxxxxxxxx
# NOTIFIARR_API_KEY=xxxxxxxxxxxxxxxxxxxx
